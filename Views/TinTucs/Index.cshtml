@model IEnumerable<NamCamera.Models.TinTuc>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutManagement.cshtml";
}

<h2>@Html.ActionLink("Tạo một bài viết mới", "Create")</h2>

<div class="table-responsive">
    <table class="table table-hover">
        <thead>
            <tr class="table-primary">
                <th>
                    #
                </th>
                <th>
                    Tiêu đề
                </th>
                <th>
                    Nội dung bài viết
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.ActionLink("Sửa", "Edit", new { id = item.TinTucID }) <br /> <br />
                        @*@Html.ActionLink("Details", "Details", new { id = item.TinTucID }) <br /> <br />*@
                        @Html.ActionLink("Xóa", "Delete", new { id = item.TinTucID }) <br />
                    </td>
                    <td>
                        <a href="/TinTucs/Details/@item.TinTucID">
                            <span class="text-danger">
                                @Html.DisplayFor(modelItem => item.TieuDe)
                            </span>
                        </a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NoiDung)
                    </td>

                </tr>
            }
        </tbody>
    </table>

</div>


