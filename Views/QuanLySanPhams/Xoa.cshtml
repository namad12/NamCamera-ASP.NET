@model PagedList.IPagedList<NamCamera.Models.SanPham>
@using PagedList.Mvc

@{
    ViewBag.Title = "Xoa";
    Layout = "~/Views/Shared/_LayoutManagement.cshtml";
}


<div class="col-lg-12 stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Xóa máy ảnh</h4>
 
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr class="table-warning">
                            <th>
                                @*@Html.DisplayNameFor(model => model.TenSanPham)*@
                                Tên sản phẩm
                            </th>
                            <th>
                                @*@Html.DisplayNameFor(model => model.Hang)*@
                                Hãng
                            </th>
                            <th>
                                @*@Html.DisplayNameFor(model => model.GiaNhap)*@ Giá nhập
                            </th>
                            <th>
                                @*@Html.DisplayNameFor(model => model.GiaBan)*@ Giá bán
                            </th>
                            <th>
                                @*@Html.DisplayNameFor(model => model.Anh01)*@ Hình ảnh 01
                            </th>
                            <th>
                                @*@Html.DisplayNameFor(model => model.Anh02)*@ Hình ảnh 02
                            </th>
                            <th>
                                @*@Html.DisplayNameFor(model => model.Anh03)*@ Hình ảnh 03
                            </th>
                            <th> 
                                #
                            </th>
                        </tr>
                    </thead>
                    <tbody>
     
                        @foreach (var item in Model)
                        {
                     
                        <tr class="table-warning">
                            <td>
                                @Html.DisplayFor(modelItem => item.TenSanPham)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Hang)
                            </td>
                            <td class="text-danger">
                                @Html.DisplayFor(modelItem => item.GiaNhap)
                            </td>
                            <td class="text-success">
                                @Html.DisplayFor(modelItem => item.GiaBan)
                            </td>
                       
                            <td>
                                <img src="~/Content/CameraImages/@Html.DisplayFor(modelItem => item.Anh01)" alt="ảnh" class="img-thumbnail" />
                            </td>
                            <td>
                                <img src="~/Content/CameraImages/@Html.DisplayFor(modelItem => item.Anh02)" alt="ảnh" class="img-thumbnail" />
                            </td>
                            <td>
                                <img src="~/Content/CameraImages/@Html.DisplayFor(modelItem => item.Anh03)" alt="ảnh" class="img-thumbnail" />
                            </td>
                         
                            <td>
                              
                                @Html.ActionLink("Xóa", "Delete", new { id = item.SanPhamID })
                            </td>
                           
                        </tr>
                            
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<div style="height:20px;">

</div>
<div style="text-align:center">Page @(Model.PageCount<Model.PageNumber?0:Model.PageNumber) of @Model.PageCount</div>
<div style="margin-left:450px;">
    <span>
        @Html.PagedListPager(Model, page => Url.Action("Xoa", new { page }))
    </span>
</div>

